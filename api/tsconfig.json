{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@types/*": ["./@types/*"],
      "src/types/*": ["./src/types/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "types": ["node", "jest", "sinon"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}